#!/bin/bash

set -u
set -e
#set -x

for d in */; do
  echo "### ${d}"
  if [[ -d "${d}/.git" ]]; then
    (cd "${d}"; git fetch --all)
    branch=$(cd "${d}"; git symbolic-ref --short HEAD)
    commit=$(cd "${d}"; git rev-list -n 1 --all)
    commit_count=$(cd "${d}"; git rev-list --all --count)
    echo "branch: ${branch}"
    echo "commit: ${commit}"
    echo "commit_count: ${commit_count}"
    if [[ 'master' = "${branch}" &&
          -n "$commit" &&
          $commit_count -gt 0
       ]]; then
      (cd "${d}"; git pull)
    fi
  fi
done
